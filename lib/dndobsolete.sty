% Old table environments and macros
\NewDocumentCommand { \header } { m }
  {
    \dnd@deprecate { \noexpand\header } { 0.8 } [ Use~the~header~key~on~DndTable~instead. ]
    \group_begin:
      \par\vspace*{8pt}
      \noindent
      \dnd@TableTitleFont
      #1
    \group_end:
  }
  
\NewDocumentEnvironment { dndtable } { O { XX } O { tablecolor } }
  {
    \dnd@deprecate { dndtable } { 0.8 } [ Use~DndTable~instead. ]
    \par \vspace*{8pt}
    \noindent
    \dnd@TableBodyFont
    \rowcolors { 1 } {} { #2 }
    \tabularx { \linewidth } { #1 }
  }
  {
    \vspace{8pt plus 1pt}
    \noindent
  }

\NewDocumentEnvironment { dnditemtable } { O { XX } }
  {
    \dnd@deprecate { dnditemtable } { 0.7 } [ Set~tablecolor~and~use~DndTable~instead. ]
    \par\vspace*{8pt}
    \noindent
    \dnd@TableBodyFont
    \rowcolors{1}{}{DmgCoral}
    \tabularx{\linewidth}{#1}
  }
  {
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
  }