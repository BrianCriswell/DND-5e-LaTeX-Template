% Table Header
\newcommand{\header}[1]{{
  \par\vspace*{8pt}
  \noindent
  \l__dnd_font_table_title_tl
  #1}}

% Centered Column
\newcolumntype{Y}{>{\centering\arraybackslash}X}

% Table Environment
\NewDocumentEnvironment{dndtable}{O{XX} O{tablecolor}}{%
    \par\vspace*{8pt}
    \noindent
    \l__dnd_font_table_body_tl
    \rowcolors{1}{}{#2}
    \tabularx{\linewidth}{#1}
  }{%
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
  }

